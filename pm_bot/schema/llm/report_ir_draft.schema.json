{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pm_bot/schema/llm/report_ir_draft.schema.json",
  "title": "report_ir_draft capability output",
  "type": "object",
  "required": ["draft"],
  "additionalProperties": false,
  "properties": {
    "draft": {
      "type": "object",
      "required": ["schema_version", "report"],
      "additionalProperties": true,
      "properties": {
        "schema_version": { "type": "string", "enum": ["report_ir/v1"] },
        "report": {
          "type": "object",
          "required": ["title", "generated_at", "scope"],
          "additionalProperties": true,
          "properties": {
            "title": { "type": "string" },
            "generated_at": { "type": "string" },
            "scope": {
              "type": "object",
              "required": ["org"],
              "additionalProperties": true,
              "properties": {
                "org": { "type": "string" },
                "repos": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
